<arquillian xmlns="http://jboss.org/schema/arquillian"
            xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:schemaLocation="
        http://jboss.org/schema/arquillian
        http://jboss.org/schema/arquillian/arquillian_1_0.xsd">

    <defaultProtocol type="Servlet 3.0"/>

    <container qualifier="unit-test" default="true">
        <configuration>
            <property name="managementAddress">0.0.0.0</property>
            <property name="managementPort">9999</property>
            <property name="username">admin</property>
            <property name="password">Passw0rd!</property>
        </configuration>
    </container>

    <extension qualifier="docker">
        <property name="definitionFormat">CUBE</property>
        <property name="dockerContainers">
            unit-test:
                buildImage:
                    dockerfileLocation: src/test/docker/unit-test
                    noCache: true
                    remove: true
                await:
                    strategy: sleeping
                    sleepTime: 60 s
                portBindings: [1090->1080/tcp, 9999/tcp, 8080/tcp]
                restartPolicy:
                    name: failure
                    maximumRetryCount: 1
                manual: false
                links:
                    - dummy-service:dummy-service

            test:
                image: dummy-mediation:0.0.1-SNAPSHOT
                exposedPorts: [1080/tcp]
                await:
                    strategy: sleeping
                    sleepTime: 60 s
                portBindings: [1080/tcp]
                restartPolicy:
                    name: failure
                    maximumRetryCount: 1
                manual: false
                links:
                    - dummy-service:dummy-service

            dummy-service:
                image: ol_dummy_service:0.0.1-SNAPSHOT
                await:
                    strategy: sleeping
                    sleepTime: 60 s
                restartPolicy:
                    name: failure
                    maximumRetryCount: 1
                manual: false
        </property>
    </extension>
    <!-- This enables the Arquillian JaCoCo Extension -->
    <extension qualifier="jacoco"/>

    <!-- This enables the Arquillian RestAssured Extension -->
    <extension qualifier="restassured">
        <property name="port">8080</property>
    </extension>

</arquillian>
